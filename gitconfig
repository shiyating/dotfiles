[core]
	editor = vim
	autocrlf = input
	whitespace = cr-at-eol
	pager = sed 's/\\t/        /g' | less -R
	excludesfile = $HOME/.gitignore_global
	preloadindex = true
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = true
[alias]
	co = checkout
	ci = commit --verbose
	st = status
	br = branch
	last = log -1 HEAD
	unstage = reset HEAD --
	gr = "log --graph --pretty=format:'%Cred%h%Creset%x09%C(yellow) %d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
	last = !git --no-pager gr -20
	d = difftool
[merge]
	tool = meld
	conflictstyle = diff3
[mergetool "mymeld"]
	cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --diff $LOCAL $BASE $REMOTE $MERGED
[branch]
	autosetuprebase = always
[push]
	default = current
[credential]
	helper = cache --timeout=86400
[rerere]
	enabled = 1
[rebase]
	instructionFormat = [%an @ %ar] %s
[git-up "fetch"]
	prune = true
	all = true
[mergetool]
	keepBackup = false
[include]
	path = ~/.local_gitconfig
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[diff]
	algorithm = patience
