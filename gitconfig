[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	last = log -1 HEAD
	unstage = reset HEAD --
    graph = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --all --date=short
[mergetool "mymerge"]
	cmd = vimdiff \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
