[core]
	editor = vim
	autocrlf = input
	whitespace = cr-at-eol
	pager = sed 's/\\t/        /g' | less -R
	preloadindex = true
	excludesfile = ~/.gitignore_global
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = true

[alias]
	co = checkout
	ci = commit --verbose
	st = status
	br = branch
	last = log -1 HEAD
	unstage = reset HEAD --
	gr = "log --graph --pretty=format:'%C(red)%h%C(reset)%x09 %C(yellow)%d%C(reset) %s %C(green)(%cr) %C(bold blue)<%an>%C(reset)' --abbrev-commit --date=relative"
	last = !git --no-pager gr -20
	d = difftool
	amend-to = "!f() { SHA=`git rev-parse \"$1\"`; git commit --fixup \"$SHA\" && \
		GIT_SEQUENCE_EDITOR=true git rebase --autostash --interactive --autosquash \"$SHA^\";}; f"
	rename = "!f() { git push origin origin/$1:refs/heads/$2 :$1; } ; f"
	cap = "!f() { git commit --verbose -e -m \"$@\"; }; f"
	new = "!f() { git cap \"ğŸ“¦ NEW: $@\"; }; f"
	imp = "!f() { git cap \"ğŸ‘Œ IMPROVE: $@\"; }; f"
	fix = "!f() { git cap \"ğŸ› FIX: $@\"; }; f"
	rlz = "!f() { git cap \"ğŸš€ RELEASE: $@\"; }; f"
	doc = "!f() { git cap \"ğŸ“– DOC: $@\"; }; f"
	tst = "!f() { git cap \"âœ… TEST: $@\"; }; f"
[merge]
	tool = meld
	conflictstyle = diff3
[mergetool "mymeld"]
	cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --diff $LOCAL $BASE $REMOTE $MERGED
[branch]
	autosetuprebase = always
[push]
	default = current
[credential]
	helper = cache --timeout=86400
[rerere]
	enabled = 1
[rebase]
	instructionFormat = [%an @ %ar] %s
[git-up "fetch"]
	prune = true
	all = true
[git-up "rebase"]
	arguments = --rerere-autoupdate
[mergetool]
	keepBackup = false
[diff]
	algorithm = patience
	submodule = log
	tool = meld
[user]
	email = comet.jc@gmail.com
	name = Jethro Yu
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[cola]
	spellcheck = true
[sequence]
	editor = interactive-rebase-tool
[include]
	path = ~/.local_gitconfig
